<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".Settings" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Server_IP_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Server IP:"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Server_IP_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Server_Port_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server Port:"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Server_Port_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/Phone_ID_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone ID:"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Phone_ID_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" />
    </LinearLayout>

    <Button
        android:id="@+id/Settings_save_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:color="#000"
        android:textColor="#FFF"
        android:textSize="30sp" />

</LinearLayout>